{% extends 'partials/base.html.twig' %}

{% block content %}

	{# HEADING #}
	{% include 'partials/default-heading.html.twig' %}
	
	{# CONTENT #}
	{% if page.content %}
	{% include 'modular/editor.html.twig' %}
	{% endif %}

	{# FORM #}
	<section class="module form-container">
		{% include "forms/form.html.twig" %}
	</section>

	{# MODULES #}
	{% for module in page.collection({ items: {'@self.modular':''}, 'order': {'by':'folder', 'dir':'asc'}}) %}
	{{ module.content|raw }}
	{% endfor %}

{% endblock %}
