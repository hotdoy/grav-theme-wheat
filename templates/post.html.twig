{% extends 'partials/base.html.twig' %}

{% block content %}

	{# HEADING #}
	{% include 'partials/post-heading.html.twig' with {class: 'mt-half'} %}

	{# MEDIA #}
	{% include 'modular/media.html.twig' with {class: 'mt-half'} %}
	
	{# CONTENT #}
	{% if page.content %}
	{% include 'modular/editor.html.twig' with {class: 'mt-half'} %}
	{% endif %}

	{# MODULES #}
	{% for module in page.collection({ items: {'@self.modular':''}, 'order': {'by':'folder', 'dir':'asc'}}) %}
	{{ module.content|raw }}
	{% endfor %}

{% endblock %}
