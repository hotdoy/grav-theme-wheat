{% extends 'partials/base.html.twig' %}

{% block content %}

	{# HEADING #}
	{% include 'partials/post-heading.html.twig' %}

	{# MEDIA #}
	{% include 'modular/media.html.twig' %}
	
	{# CONTENT #}
	{% if page.content %}
	{% include 'modular/editor.html.twig' %}
	{% endif %}

	{# MODULES #}
	{% for module in page.collection({ items: {'@self.modular':''}, 'order': {'by':'folder', 'dir':'asc'}}) %}
	{{ module.content|raw }}
	{% endfor %}

	{# RANDOM PICKS #}
	{% set related_options = { items: {'@self.siblings':''}, 'limit': 6, 'order': {'by': 'random'}} %}
	{% set related_items = page.collection(related_options) %}
	{% include 'modular/carousel.html.twig' with { 'title': 'THEME.POST.RELATED'|t, 'collection': related_items } only %}

{% endblock %}
