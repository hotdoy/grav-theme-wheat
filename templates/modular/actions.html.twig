{% extends 'modular/module.html.twig' %}
{% set name = 'actions' %}
{% set display_title = display_title ?? page.header.display_title ?? null %}
{% set items = items ?? page.header.items ?? null %}

{% block content %}
<div class="wrapper text">

	{% if display_title %}
	<div class="module__title">
		<h2>{{ display_title|raw }}</h2>
	</div>
	{% endif %}

    <div class="layout">
        {% for item in items %}
            {% set title = item.title %}
            {% set text = item.text %}
            {% set button_label = item.button_label %}
            {% set button_url = item.button_url %}
            <div class="item">
                <div class="content text prose">
                    {% if loop.length > 1 %}
                        <div class="index">{{ loop.index }}</div>
                    {% endif %}
                    {% if title %}<h3>{{ title }}</h3>{% endif %}
                    {% if text %}<p>{{ text }}</p>{% endif %}
                </div>
                <div class="action">
                    <a href="{{ button_url }}" class="button">{{ button_label }}</a>
                </div>
            </div>        
        {% endfor %}        
    </div>

</div>
{% endblock %}
