{% extends 'modular/module.html.twig' %}
{% set name = 'grid' %}
{% set display_title = page.header.display_title %}
{% set items = items|default(page.header.items) %}

{% block content %}
<div class="wrapper text">

    {% if display_title %}
	<h2>{{ display_title }}</h2>
	{% endif %}

    <div class="layout">
        {% for item in items %}
        <div class="item text small prose">
            <h3>{{ item.title }}</h3>
            <p>{{ item.text }}</p>
        </div>
        {% endfor %}
    </div>

</div>
{% endblock %}
