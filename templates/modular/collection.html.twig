{% set optional_classes = page.header.optional_classes %}
{% set display_title = page.header.display_title ?? 'true' %}

<section class="module collection {{ optional_classes }}">

	<div class="collection__ctn text">
		{% if display_title %}
		{% if page.header.caption %}
		<div class="collection__caption">{{ page.header.caption }}</div>
		{% endif %}
		<h2 class="collection__title">{{ page.title }}</h2>
		{% endif %}

		<div class="swiper-container" id="carousel-{{ random() }}">
			<div class="swiper-wrapper">

				{% for p in page.collection %}
				{% set selected_media = p.header.selected_media ? p.media[p.header.selected_media] : p.media.images|first %}
				{% set selected_media_alt = p.header.selected_media_alt ?? '' %}

				<article class="swiper-slide collection__item">
					<a href="{{ p.url }}">
						<div class="fill">
							{% if selected_media.type == 'video' %}
							{{ selected_media.controls(0).autoplay(1).muted(1).loop(1).html('', selected_media_alt) }}
							{% else %}
							{{ selected_media.cropResize(1034,692).html('', selected_media_alt) }}
							{% endif %}
						</div>
						<div class="collection__item__veil fill">
							<h3 class="collection__item__title">{{ p.title }}</h3>
						</div>
					</a>
				</article>
				{% endfor %}

			</div>
		</div>
	</div>

</section>
