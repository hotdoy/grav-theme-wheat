{% extends 'modular/module.html.twig' %}
{% set name = 'numbers' %}
{% set el = 'wht-numbers' %}

{% set display_title = display_title ?? page.header.display_title ?? null %}
{% set items = items ?? page.header.items ?? null  %}

{% block content %}
<numbers-wrapper>

	{% if display_title %}
	<div class="module__title text">
		<h2>{{ display_title|raw }}</h2>
	</div>
	{% endif %}

    <numbers-layout>
        {% for item in items %}
		{% set n = item.number %}
		{% set t = item.text %}
		<numbers-item>
			<h3>{{ n }}</h3>
			<p>{{ t|raw }}</p>
		</numbers-item>
		{% endfor %}
    </numbers-layout>

</numbers-wrapper>
{% endblock %}
