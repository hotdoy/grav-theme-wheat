{% import "partials/svg.html.twig" as svg %}
{% extends 'modular/module.html.twig' %}

{% set name = 'carousel' %}
{% set title = title|default(page.header.display_title) %}
{% set items = items ?? page.header.items  %}

{% block content %}
<div class="wrapper text">

	{% if title %}
	<h2>{{ title }}</h2>
	{% endif %}
	
	<div class="scroller">
		<div class="scroller__scrollctn">
			{% for item in items %}
				{% set image = item.image ? page.media[item.image] %}
				{% set image_alt = item.image_alt %}
				{% set title = item.title %}
				{% set subtitle = item.subtitle %}
				<div class="scroller__slide">
					
					<article>
						<a>
							<div class="media">
								{% include "partials/img.html.twig" with {image: image, image_alt: image_alt} %}
							</div>
							<div class="content">
								<h3>{{ title }}</h3>
								<p>{{ subtitle }}</p>
							</div>
						</a>
					</article>

				</div>
			{% endfor %}
		</div>
		<span class="scroller__prev"></span>
		<span class="scroller__next"></span>
	</div>
</div>
{% endblock %}
