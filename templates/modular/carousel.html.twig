{% extends 'modular/module.html.twig' %}
{% set name = 'carousel' %}

{% set title = title|default(page.header.display_title) %}
{% set collection = collection|default() %}
{% set list = list|default(page.header.items) %}

{% block content %}

<div class="wrapper text">
	
	{% if title %}
	<h2>{{ title }}</h2>
	{% endif %}
	
	<div class="swiper-container">
		<div class="swiper-wrapper">

			{# COLLECTION #}
			{% for item in collection %}
			<div class="swiper-slide">
				 {% include ['partials/' ~ item.template ~ '-card.html.twig', 'partials/default-card.html.twig' ] with {'item': item} %}
			</div>
			{% endfor %}

			{# PAGES #}
			{% for item in list %}
			{% set item = page.find(item.page) %}	
			<div class="swiper-slide">
				 {% include ['partials/' ~ item.template ~ '-card.html.twig', 'partials/default-card.html.twig' ] with {'item': item} %}
			</div>
			{% endfor %}
		</div>

		{# SCROLLBAR #}
		<div class="swiper-scrollbar"></div>
	</div>	
</div>
{% endblock %}
