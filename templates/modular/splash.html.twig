{% set optional_classes = page.header.optional_classes ?? '' %}
{% set content = page.content|raw %}
{% set selected_media = page.header.selected_media ? page.media[page.header.selected_media] %}
{% set selected_media_alt = page.header.selected_media_alt ?? '' %}
{% set veil = page.header.veil %}

<section class="module splash {{ optional_classes }}">
	<div class="splash__ctn">

		<div class="splash__media fill" data-reveal="reveal--scalein">
		{% if selected_media.type == 'video' %}
			{{ selected_media.controls(0).autoplay(1).muted(1).loop(1).html('', selected_media_alt) }}
		{% else %}
			{{ selected_media.html('', selected_media_alt) }}
		{% endif %}
		</div>

		{% if veil %}<div class="splash__veil fill"></div>{% endif %}

		<div class="splash__content-ctn" data-reveal>
			<div class="content">{{ content }}</div>
		</div>

	</div>
</section>