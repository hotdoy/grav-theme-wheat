{% extends 'modular/module.html.twig' %}
{% set name = 'quotes' %}
{% set items = items ?? page.header.items ?? null %}

{% block content %}
<div class="wrapper">
	<div class="scroller">
		<div class="scroller__scrollctn">
			{% for item in items %}
			{% set quote = item.quote %}
			{% set color = item.color %}
			{% set source = item.source %}
			{% set image = item.image ? page.media[item.image] %}
			<div class="scroller__slide"{% if color %} style="--color:{{ color }}"{% endif %}>
				<div class="quote text">
					<blockquote>{{ quote }}</blockquote>
				</div>
				{% if image %}
				<div class="portrait">
					{% include "partials/img.html.twig" with {image: image} only %}
				</div>
				{% endif %}
				<div class="source text small">{{ source }}</div>
			</div>
			{% endfor %}
		</div>
		{% if items|length > 1 %}
		<button class="scroller__prev"></button>
		<button class="scroller__next"></button>
		{% endif %}
	</div>	
</div>
{% endblock %}