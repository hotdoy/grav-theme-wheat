
{# NAV TREE LOOP #}
{% macro tree(pages) %}
    {% for p in pages.children.visible %}
    <li class="{{ (p.active or p.activeChild) ? ' active' : '' }}"><a href="{{ p.url }}">{{ p.menu }}</a>
        {% if p.children.visible %}
        <ul>
            {{ _self.tree(p) }} 
        </ul>
        {% endif %}
    </li>
    {% endfor %}
{% endmacro %}

{# NAV TREE LOOP WITH SUBPANEL #}
{% macro subpanel(pages) %}
    {% for p in pages.children.visible %}
        <li class="{{ (p.active or p.activeChild) ? ' active' : '' }}"><a href="{{ p.url }}">{{ p.menu }}</a>

            {% if p.children.visible %}
            <ul class="subpanel">

                <div class="subpanel__header">

                    <button class="back" aria-label="Go to previous panel">Back</button>

                    <div class="toggles">

                        {% if theme.snipcart_enabled and theme.snipcart_public_key %}
                        <button class="cart snipcart-checkout" aria-label="open cart">
                            <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none"></path><path fill="currentColor" d="M15.55 13c.75 0 1.41-.41 1.75-1.03l3.58-6.49c.37-.66-.11-1.48-.87-1.48H5.21l-.94-2H1v2h2l3.6 7.59-1.35 2.44C4.52 15.37 5.48 17 7 17h12v-2H7l1.1-2h7.45zM6.16 6h12.15l-2.76 5H8.53L6.16 6zM7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zm10 0c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z"></path></svg>
                            <span class="snipcart-items-count">0</span>
                            <span class="snipcart-pulse"></span>
                        </button>
                        {% endif %}
                        
                        <button class="close js-panel-close" aria-label="close menu">
                            <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0z" fill="none"></path><path fill="currentColor" d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"></path></svg>
                        </button>

                    </div>
                </div>

                {{ _self.subpanel(p) }}
            </ul>
            {% endif %}

        </li>
    {% endfor %}
{% endmacro %}
