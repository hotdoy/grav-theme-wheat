{% extends 'partials/base.html.twig' %}

{% set main_image = main_image|default(page.header.main_image ? page.media[page.header.main_image]) %}
{% set main_image_alt = main_image_alt|default(page.header.main_image_alt ?? '') %}

{% block content %}

	<article class="article">

		<h1 class="article__title">{{ page.title }}</h1>
		<p class="article__subheading">{{ page.header.subheading }}</p>

		<section class="article__meta">
			@todo date
			@todo readtime
			{% include 'partials/share-button.html.twig' %}
		</section>

		<figure>
			{{ main_image.html('', main_image_alt, 'article__main-image') }}
			<figcaption class="article__caption">{{ page.header.main_image_caption }}</figcaption>
		</figure>

		<section class="module content text">
			{{ page.content|raw }}
		</section>

	</article>

	

{% endblock %}
