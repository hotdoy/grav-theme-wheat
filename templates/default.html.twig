{% extends 'partials/base.html.twig' %}
{% set modules = page.collection({ items: {'@self.modular':''}, 'order': {'by':'folder', 'dir':'asc'}}) %}

{% block content %}

	{# HEADING #}
	{% if page.header.display_title %}
		{% include 'partials/default-heading.html.twig' %}
	{% endif %}
	
	{# CONTENT #}
	{% if page.content %}
	{% include 'modular/editor.html.twig' %}
	{% endif %}
	
	{# MODULES #}
	{% for module in modules %}
	{{ module.content|raw }}
	{% endfor %}

{% endblock %}
