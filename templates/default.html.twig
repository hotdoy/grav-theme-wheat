{% extends 'partials/base.html.twig' %}
{% set display_title = page.header.display_title ?? 'true' %}

{% block content %}
	{% if display_title %}
	<h1 class="default__title" data-reveal>{{ page.title }}</h1>
	{% endif %}
	{% if page.content %}
	{% include 'modular/content.html.twig' %}
	{% endif %}
	{% for module in page.collection({ items: {'@self.modular':''}, 'order': {'by':'folder', 'dir':'asc'}}) %}
	{{ module.content|raw }}
	{% endfor %}
{% endblock %}
