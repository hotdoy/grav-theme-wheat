{% import "partials/svg.html.twig" as svg %}

<header id="header">

    <div class="shim"></div>
    
    <div class="header">
        <div class="layout">

            {# LEFT - LOGO #}
            <a class="logo" href="{{ home_url }}" aria-label="Site logo">
                {{ svg.wheat() }}
            </a> 

            {# RIGHT - LINKS & TOGGLES #}
            <div class="toggles">
                <nav class="nav">
                    <ul>
                        <li class="version">v{{ grav.theme.getBlueprint().version }}</li>
                        {% for link in root_params.header.header_links %}
                        <li><a href="{{ link.url }}">{{ link.label }}</a></li>
                        {% endfor %}
                        {% include 'partials/langswitcher.html.twig' %}
                        {# {% if config.get('plugins.algolia-pro.enabled') %} #}
                        {% if config.plugins['algolia-pro'].enabled %}
                        <li>
                            <button class="search" aria-label="search" data-algolia-pro-trigger>
                                {{ svg.search() }}
                            </button>
                        </li>
                        {% endif %}
                        {% if theme.snipcart %}
                        {% if not theme.snipcart_allow_guests_only %}
                        <li>
                            <button class="snipcart-account snipcart-customer-signin" aria-label="customer sign in">
                                {{ svg.user() }}
                            </button>
                        </li>
                        {% endif %}
                        <li>
                            <button class="snipcart-checkout" aria-label="open cart">
                                {{ svg.bag() }}
                                <span class="snipcart-items-count">0</span>
                            </button>
                        </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>

