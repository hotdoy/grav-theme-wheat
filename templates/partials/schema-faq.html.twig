<script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": [

        {% for item in items %}
        {
        "@type": "Question",
        "name": "{{ item.title }}",
            "acceptedAnswer": {
            "@type": "Answer",
            "text": "{{ item.content|markdown|striptags }}"
            }
        } 
        {% if not loop.last %},{% endif %}
        {% endfor %}
        ]
    }
</script>
