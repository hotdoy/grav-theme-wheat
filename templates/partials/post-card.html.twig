{% set item = item|default(item) %}
{% set image = image|default(item.header.image ? item.media[item.header.image]) %}
{% set image_alt = image_alt|default(item.header.image_alt ?? '') %}
{% set title = title|default(item.header.title) %}
{% set date = date|default(item.header.date) %}
{% set loop = loop|default(loop) %}

<article class="post__card" style="--index:{{ loop.index }}">
	<a href="{{ item.url }}">
		<div class="media-ctn">
			{% include "partials/img.html.twig" with {image: image, alt: image_alt} only %}
		</div>
		<div class="text small">
			<h3>{{ title }}</h3>
			<p>{{ date|date('Y/m/d') }}</p>
		</div>
	</a>
</article>
