{% import 'partials/svg.html.twig' as svg %}

{% set title = page.header.display_title  %}
{% set url = uri.base() ~ page.url %}

<div id="share">
	<div class="wrapper">
		<div class="layout">
			<div class="content">
				<p>
					Share
				</p>
			</div>
			
			<div class="triggers">
				<div class="system">
					<a>
						{{ svg.share() }}
					</a>
				</div>
				<div class="fallback">
					<a alt="Facebook" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{ url }}">
						{{ svg.facebook() }}
					</a>
					<a alt="Linkedin" target="_blank" href="https://www.linkedin.com/sharing/share-offsite/?url={{ url }}">
						{{ svg.linkedin() }}
					</a>
					<a alt="Twitter" target="_blank" href="https://twitter.com/intent/tweet?url={{ url }}&text={{ title }}">
						{{ svg.twitter() }}
					</a>
					<a alt="Mail" target="_blank" href="mailto:?subject={{ title }}&amp;body=Check this article: {{ url }}">
						{{ svg.mail() }}
					</a>
					{#<a class="poly copy">
						{{ svg.link() }}
					</a>#}					
				</div>

			</div>
		</div>
	</div>
</div>